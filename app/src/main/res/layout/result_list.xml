<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/good_head_img"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:src="@mipmap/buffer_pic"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/good_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/good_head_img"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:textSize="16sp"
        android:textColor="#696969"
        android:text="商品名字"
        android:maxEms="6"
        />
    <TextView
        android:id="@+id/good_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:textSize="14sp"
        android:textColor="#696969"
        android:text="5 分"/>
    <TextView
        android:id="@+id/good_price_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_name_text"
        android:layout_toRightOf="@id/good_head_img"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/lightgray"
        android:textSize="12sp"
        android:text="市场价：0 元"/>
    <TextView
        android:id="@+id/good_price_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/good_head_img"
        android:layout_below="@id/good_price_text1"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="20dp"
        android:text="会员价：0 元"/>

</RelativeLayout>