<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/order_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="订单类型"
        android:textSize="14sp"
        android:textColor="@color/lightgray"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="@color/lightblue"
        />
    <ImageView
        android:id="@+id/order_head_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/order_type"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/order_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/lightgray"
        android:text="编号"
        android:layout_below="@id/order_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxEms="10"
        android:layout_toRightOf="@id/order_head_img"/>
    <TextView
        android:id="@+id/order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/lightgray"
        android:text="time"
        android:layout_toRightOf="@id/order_head_img"
        android:layout_below="@id/order_sn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/order_status"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/order_type"
        android:text="已完成"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/order_oldprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_time"
        android:text="原价"
        android:textSize="14sp"
        android:textColor="@color/lightgray"
        android:layout_toRightOf="@id/order_head_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_time"
        android:text="现价"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_toRightOf="@id/order_oldprice"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/order_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="查看详情"
        android:textColor="@color/lightgray"
        android:layout_alignBottom="@id/order_oldprice"
        android:layout_marginRight="10dp"/>
</RelativeLayout>