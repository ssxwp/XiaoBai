<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.mrbuy.activity.DaodActivity">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/ll_daod_tuy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:middleText="关于兔友"
        >
    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>
    <ScrollView
        android:id="@+id/ll_daodtuyou"
        android:layout_below="@+id/ll_daod_tuy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <ImageView
        android:id="@+id/iv_daodtuyou"
        android:layout_width="match_parent"
        android:layout_below="@+id/goods_headview"
        android:background="@mipmap/daodiao"
        android:layout_height="match_parent" />
    </ScrollView>
</RelativeLayout>
