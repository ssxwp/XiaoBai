<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingyuan.tianya.mrbuy.fragment.BrandFragment"
    android:background="@color/backgroudcolor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <RelativeLayout
                    android:id="@+id/spinner_rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="40dp"
                    android:background="#00ffffff"
                    >
                    <TextView
                        android:id="@+id/tv_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="品牌"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/searchview"
                        android:textSize="16sp"
                        android:textColor="#ff000000"
                        android:gravity="left"
                        android:paddingLeft="5dp"/>
                    <ImageView
                        android:id="@+id/fr_brand_spinner_image"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_downwhite"
                        android:background="#00ffffff"/>

                </RelativeLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@mipmap/personbg"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <RelativeLayout
                    android:id="@+id/spinner_rl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="40dp"
                    android:background="#00ffffff"
                    >
                    <TextView
                        android:id="@+id/tv_pre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="夹克"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/searchview"
                        android:textSize="16sp"
                        android:textColor="#ff000000"
                        android:gravity="left|center"
                        android:paddingLeft="5dp"/>
                    <ImageView
                        android:id="@+id/fr_sort_spinner_image"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_downwhite"
                        android:background="#00ffffff"/>

                </RelativeLayout>
            </FrameLayout>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="2"
                android:layout_marginTop="10dp">

            </GridView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
