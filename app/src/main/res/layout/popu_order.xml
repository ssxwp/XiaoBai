<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_defa_order"
            android:layout_width="match_parent"
            android:layout_height="50dip">

            <TextView
                android:id="@+id/tv_default_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text="默认排序"
                android:textColor="@color/bright_red"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_tick1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@mipmap/tick" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@id/rl_defa_order"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/deepgray" />

        <RelativeLayout
            android:id="@+id/rl_price_hightolow"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/line1">

            <TextView
                android:id="@+id/price_hightolow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text="价格从高到低"
                android:textColor="@color/lightgray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_sort_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/price_hightolow"
                />

            <ImageView
                android:id="@+id/iv_tick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@mipmap/tick"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@id/rl_price_hightolow"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/deepgray" />

        <RelativeLayout
            android:id="@+id/rl_price_lowtohigh"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/line2">

            <TextView
                android:id="@+id/price_lowtohigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text="价格从低到高"
                android:textColor="@color/lightgray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_sort_down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/price_lowtohigh"
                />

            <ImageView
                android:id="@+id/iv_tick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@mipmap/tick"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@id/rl_price_lowtohigh"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/deepgray" />

        <RelativeLayout
            android:id="@+id/rl_volume_highsorttolow"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_below="@id/line3">

            <TextView
                android:id="@+id/volume_highsorttolow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text="成交量从高到低"
                android:textColor="@color/lightgray"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_sort_down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dip"
                android:layout_toRightOf="@id/volume_highsorttolow"
                 />

            <ImageView
                android:id="@+id/iv_tick4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@mipmap/tick"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>