<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.mrbuy.fragment.BookFragment">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/book_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/editon_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="平板电脑"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/child_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="摄影摄像"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/letter_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="摄影配件"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/society_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="影音娱乐"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/buss_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="智能穿戴"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/succe_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="网络产品"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/science_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="周边配件"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>
            <TextView
                android:id="@+id/live_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/searchview"
                android:text="电子教育"
                android:textSize="16sp"
                android:textColor="@color/lightdark"
                android:gravity="center"/>

        </LinearLayout>
        <com.qingyuan.tianya.mrbuy.view.pulltorefresh.PullToRefreshListView
            android:id="@+id/book_list"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/backgroudcolor"
            android:divider="@color/backgroudcolor"
            android:dividerHeight="6dip"
            android:gravity="center"
            android:listSelector="#00000000"
            android:scrollbars="none"/>
    </LinearLayout>
</LinearLayout>
