                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:background="#ddd" />
            <!--<RelativeLayout
                android:id="@+id/menu_travel_rel"
                android:layout_width="match_parent"
