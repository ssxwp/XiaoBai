                    android:id="@+id/menu_women_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/women" />

                <TextView
                    android:layout_width="wrap_content"
