<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.RegistActivity">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/login_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleText="注册"
        >

    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhuce_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_below="@id/login_head"/>
    <RelativeLayout
        android:id="@+id/log_lay1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/iv"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/zhanghao" />

        <EditText
            android:id="@+id/et_reg_phone"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/iv_phone"
            android:gravity="center_vertical"
            android:hint="输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/log_lay3"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/log_lay1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/et_reg_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/iv_password"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/log_lay5"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/log_lay3"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="20dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/iv_password1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/mima" />

        <EditText
            android:id="@+id/et_reg_password1"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/iv_password1"
            android:gravity="center_vertical"
            android:hint="确认密码"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/log_lay2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/log_lay5"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/backgroudcolor" >

        <ImageView
            android:id="@+id/iv_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_verification_code" />

        <TextView
            android:id="@+id/tv_reg_getsecurity"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/lightblue"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_reg_security"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/tv_reg_getsecurity"
            android:layout_toRightOf="@id/iv_security"
            android:gravity="center_vertical"
            android:hint="输入验证码"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="#666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="280dp"
        android:layout_height="45dip"
        android:layout_below="@id/log_lay2"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="25dip"
        android:background="#00a1ea"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
