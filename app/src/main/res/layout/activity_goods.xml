<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.mrbuy.activity.GoodsActivity">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/goods_headview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/goods_headview"
        />
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_head"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:id="@+id/goods_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#696969"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/goods_price_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"/>
        <TextView
            android:id="@+id/goods_price_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:textSize="16sp"
            android:layout_below="@id/goods_price_text1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/light_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <com.qingyuan.tianya.mrbuy.view.pulltorefresh.PullToRefreshListView
        android:id="@+id/goods_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/backgroudcolor"
        android:divider="@color/backgroudcolor"
        android:dividerHeight="6dip"
        android:gravity="center"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rel"
        android:layout_toEndOf="@+id/rel" />
</RelativeLayout>
