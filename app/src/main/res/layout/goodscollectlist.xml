<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/goods_collect_img"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="9dp"
        fresco:placeholderImage="@mipmap/buffer_pic"/>
    <TextView
        android:id="@+id/goods_collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/lightgray"
        android:layout_toRightOf="@id/goods_collect_img"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="15dp"
        android:text="name"
        />
    <TextView
        android:id="@+id/goods_collect_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_collect_name"
        android:layout_toRightOf="@id/goods_collect_img"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="29dp"
        android:textSize="18sp"
        android:textColor="@color/red"
        android:text="ï¿¥"/>
    <ImageView
        android:id="@+id/goods_dele_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/goods_collect_img"
        android:layout_marginRight="13dp"
        android:src="@mipmap/delete"/>
</RelativeLayout>