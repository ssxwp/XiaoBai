<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
     >
<!-- android:background="@drawable/sidebar_bg_2" -->
    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_alignParentTop="true"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/retop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="取消"
            android:textColor="@color/lightgray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_marginLeft="0.5dip"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="确定"
            android:textColor="@color/lightgray"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/retop"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/timepicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:orientation="horizontal" >

        <com.qingyuan.tianya.mrbuy.utils.timedialogd.WheelView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.qingyuan.tianya.mrbuy.utils.timedialogd.WheelView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.qingyuan.tianya.mrbuy.utils.timedialogd.WheelView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>