<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <CheckBox
        android:id="@+id/car_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/checkitem"
        android:button="@null"
        android:checked="true"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/car_head_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/car_check"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        fresco:placeholderImage="@mipmap/buffer_pic"
        />
    <TextView
        android:id="@+id/car_name_text"
        android:layout_toRightOf="@id/car_head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        android:text="名字"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/car_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/car_head_image"
        android:layout_below="@id/car_name_text"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        android:text="价格"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="27dp"/>
    <TextView
        android:id="@+id/car_allprice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/car_name_text"
        android:textSize="16sp"
        android:textColor="@color/lightgray"
        android:text="￥"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@id/car_price_text"
        android:layout_toRightOf="@id/car_head_image"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/addbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/minus_new1"/>
        <TextView
            android:id="@+id/ttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightdark"
            android:textSize="16sp"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="17dp"/>

        <ImageView
            android:id="@+id/subbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_new1"
            android:layout_marginLeft="17dp"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/car_del_img"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:src="@mipmap/delete"
        android:layout_alignBottom="@id/car_head_image"
        />
</RelativeLayout>