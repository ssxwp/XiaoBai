<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mer_collect_img"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="7dp"
        fresco:placeholderImage="@mipmap/buffer_pic"/>
    <TextView
        android:id="@+id/mer_collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/lightgray"
        android:layout_toRightOf="@id/mer_collect_img"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        />
    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mer_collect_name"
        android:layout_toRightOf="@id/mer_collect_img"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="14dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4.5"
        android:stepSize="0.5"/>
    <ImageView
        android:id="@+id/mer_dele_img"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/mer_collect_img"
        android:layout_marginRight="13dp"
        android:src="@mipmap/delete"/>
</RelativeLayout>