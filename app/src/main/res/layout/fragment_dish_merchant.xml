<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.mrbuy.fragment.DishMerchantFragment">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_view"
            android:layout_above="@+id/fr_mer_rel"
            >
            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fr_dishmerchant_image"
                android:background="@color/white"
                android:visibility="gone">
                <TextView
                    android:id="@+id/fr_dishmerchant_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#696969"
                    android:layout_marginLeft="12dp"
                    android:maxEms="10"
                    android:layout_centerVertical="true"
                    />
                <!--收藏按钮-->
                <ImageView
                    android:id="@+id/right_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/right_pic"
                    android:layout_marginLeft="4dp"
                    android:text="收藏"
                    android:textSize="12sp"
                    android:textColor="#696969"
                    />
                <TextView
                    android:id="@+id/fr_merchant_price_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#696969"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    />
                <TextView
                    android:id="@+id/fr_merchant_price_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#696969"
                    android:textSize="14sp"
                   android:layout_below="@id/fr_merchant_price_text1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/light_gray"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="120dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/rel"
                >
                <ListView
                    android:id="@+id/sort_listview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:divider="@color/backgroudcolor"
                    android:dividerHeight="0.3dip"
                    android:gravity="center"
                    android:listSelector="@drawable/select_bg"
                    android:scrollbars="none"
                    android:visibility="gone"/>
                <com.qingyuan.tianya.mrbuy.view.pulltorefresh.PullToRefreshListView
                    android:id="@+id/fr_merchant_list"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:divider="@color/backgroudcolor"
                    android:dividerHeight="6dip"
                    android:gravity="center"
                    android:listSelector="#00000000"
                    android:scrollbars="none"
                    android:layout_marginTop="5dp"
                    >
                </com.qingyuan.tianya.mrbuy.view.pulltorefresh.PullToRefreshListView>
            </LinearLayout>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/fr_dishmerchant_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/fr_mer_rel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        android:visibility="gone">
        <TextView
            android:id="@+id/goods_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lightgray"
            android:text="共0件商品"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/goods_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/red"
            android:text="合计：0元"
            android:layout_toRightOf="@id/goods_number_text"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/goods_pay_button"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:background="#EA6200"
            android:text="支付"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</RelativeLayout>
