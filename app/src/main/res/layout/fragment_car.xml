<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.qingyuan.tianya.mrbuy.fragment.CarFragment"
    android:background="@color/backgroudcolor">
    <!--<com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/fr_car_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleText="购物车"
        >

    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>-->
    <ScrollView
        android:id="@+id/ac_vip_scro"
        android:layout_below="@id/ac_vip_back_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchview"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/ac_vip_head_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightblue">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/ac_vip_head"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    fresco:placeholderImage="@mipmap/default_round_head"
                    fresco:roundAsCircle="true"
                    fresco:roundingBorderColor="@color/white"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/ac_vip_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/ac_vip_head"
                    android:text="走，回家"
                    android:textColor="@color/lightgray"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/ac_vip_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ac_vip_name_text"
                    android:layout_below="@id/ac_vip_name_text"
                    android:text="@string/icons_vip"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/lightgray"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:id="@+id/ac_vip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ac_vip_name_text"
                    android:layout_toRightOf="@id/ac_vip_img"
                    android:text="30"
                    android:textSize="18sp"
                    android:layout_marginTop="19dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/lightgray"
                    android:layout_marginBottom="20dp"/>
                <RelativeLayout
                    android:id="@+id/ac_vip_renew"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/ac_vip_name_text"
                    android:layout_toRightOf="@id/ac_vip_text"
                    android:layout_marginLeft="20dp"
                    android:background="@color/white"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="18dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="续费"
                        android:textColor="@color/lightgray"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/lightgray"
                android:layout_below="@id/ac_vip_head_rel"/>
            <RelativeLayout
                android:id="@+id/fr_car_mess_rel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/view1"
                >
                <ImageView
                    android:id="@+id/fr_car_mess_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fr_car_mess_img"
                    android:layout_marginLeft="20dp"
                    android:text="人生若只如初见"
                    android:layout_centerVertical="true"
                    android:textColor="@color/lightblue"/>
            </RelativeLayout>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/lightgray"
                android:layout_below="@id/fr_car_mess_rel"/>
            <RelativeLayout
                android:id="@+id/fr_car_my_rel"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/view2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的特权"
                    android:textColor="@color/lightgray"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部特权"
                    android:textColor="@color/lightgray"
                    android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    />
                <ImageView
                    android:id="@+id/fr_car_my_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/arrow_2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/lightgray"
                    android:layout_below="@id/fr_car_my_img"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/lightgray"
                android:layout_below="@id/fr_car_my_rel"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/view3">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/arrow_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/lightgray"
                    android:text="会员今日专享"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
