<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor">
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <include
                    android:id="@+id/viewpager_cartype"
                    layout="@layout/viewpager_cartype"
                    android:visibility="visible" />
                <!--<View-->
                    <!--android:id="@+id/fr_right_view5"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="2dp"-->
                    <!--android:background="@color/white"-->
                    <!--android:layout_below="@id/viewpager_cartype"-->
                    <!--/>-->
                <com.qingyuan.tianya.mrbuy.view.view.ScrollTextView
                    android:id="@+id/fr_home_food_rel"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@id/viewpager_cartype"
                    android:textSize="14sp"
                    android:textColor="#060606"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:background="@color/white"
                    >
                </com.qingyuan.tianya.mrbuy.view.view.ScrollTextView>
                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="232dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/fr_home_food_rel"
                    android:visibility="gone"
                    >
                        <RelativeLayout
                            android:id="@+id/rl_daodiao"
                            android:layout_width="0dp"
                            android:layout_weight="308"
                            android:layout_height="match_parent"
                            android:background="@mipmap/daodianfu">
                            <TextView
                                android:id="@+id/instore_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#fd0315"
                                android:text="到店付"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/lightgray"
                                android:text="到店付款，同样优惠"
                                android:layout_below="@id/instore_text"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="2dp"/>
                        </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#efefef"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="408"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@mipmap/tehui">
                            <TextView
                                android:id="@+id/tospecial_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="#fd03e0"
                                android:text="特惠外卖"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/lightgray"
                                android:text="最大优惠，给你省钱"
                                android:layout_below="@id/tospecial_text"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="18dp"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#efefef"/>
                        <LinearLayout
                            android:id="@+id/ll_guangyututu"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            >
                            <RelativeLayout
                                android:id="@+id/rl_guangyutuyou"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@mipmap/wangzhu">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="#fa6a0b"
                                    android:text="关于兔友"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"/>
                            </RelativeLayout>
                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="#efefef"/>
                            <RelativeLayout
                                android:id="@+id/rl_chengyaotuyou"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:background="@mipmap/shangjia">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#01b8fb"
                                    android:textSize="14sp"
                                    android:text="诚邀商家"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/fram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/specialfood"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兔友一特色美食"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <com.qingyuan.tianya.mrbuy.view.view.MyGridView
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_below="@id/fram"
                    android:background="@color/backgroudcolor"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:gravity="center"
                    android:dividerHeight="4dp"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:listSelector="#00000000"
                    android:scrollbars="none"
                    android:numColumns="2"
                    />
                <FrameLayout
                    android:id="@+id/fram1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/special1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/specialfood"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兔友一休闲娱乐"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <com.qingyuan.tianya.mrbuy.view.view.MyGridView
                    android:id="@+id/grid1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/fram1"
                    android:background="@color/backgroudcolor"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:gravity="center"
                    android:listSelector="#00000000"
                    android:scrollbars="none"
                    android:numColumns="2"
                    />
                <FrameLayout
                    android:id="@+id/fram2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid1"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/special2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/specialfood"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兔友一丽人"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <com.qingyuan.tianya.mrbuy.view.view.MyGridView
                    android:id="@+id/grid2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/fram2"
                    android:background="@color/backgroudcolor"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:gravity="center"
                    android:listSelector="#00000000"
                    android:scrollbars="none"
                    android:numColumns="2"
                    />
                <FrameLayout
                    android:id="@+id/fram3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid2"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/special3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/specialfood"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兔友一书店"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <com.qingyuan.tianya.mrbuy.view.view.MyGridView
                    android:id="@+id/grid3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@id/fram3"
                    android:background="@color/backgroudcolor"
                    android:cacheColorHint="@color/backgroudcolor"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp"
                    android:listSelector="#00000000"
                    android:scrollbars="none"
                    android:numColumns="2"
                    />

