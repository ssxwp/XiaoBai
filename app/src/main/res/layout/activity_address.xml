<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qingyuan.tianya.mrbuy.activity.AddressActivity"
    android:background="@color/backgroudcolor">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/commen_address_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:middleText="选择地址">

    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>
    <ListView
        android:id="@+id/commen_address_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/commen_address_head"
        android:cacheColorHint="@color/backgroudcolor"
        android:divider="@color/light_gray"
        android:dividerHeight="4dip"
        android:gravity="center"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        android:choiceMode="singleChoice"/>
    <TextView
        android:id="@+id/pay_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#262a3b"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="确认选择"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"/>
</RelativeLayout>
