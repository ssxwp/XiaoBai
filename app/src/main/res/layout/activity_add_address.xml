<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    tools:context="com.qingyuan.tianya.mrbuy.activity.AddAddressActivity">
    <com.qingyuan.tianya.mrbuy.view.view.HeaderView
        android:id="@+id/add_add_head"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:middleText="创建地址">

    </com.qingyuan.tianya.mrbuy.view.view.HeaderView>
    <EditText
        android:id="@+id/addaddress_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/add_add_head"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:hint="输入详细地址"
        android:textColor="@color/lightgray"
        android:textColorHint="@color/light_gray"
        android:background="@drawable/searchview"/>
    <EditText
        android:id="@+id/addaddress_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:hint="输入姓名"
        android:textColor="@color/lightgray"
        android:layout_below="@id/addaddress_address"
        android:textColorHint="@color/light_gray"
        android:background="@drawable/searchview"/>
    <EditText
        android:id="@+id/addaddress_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:hint="输入手机号"
        android:paddingLeft="10dp"
        android:textColor="@color/lightgray"
        android:numeric="integer"
        android:inputType="phone"
        android:layout_below="@id/addaddress_name"
        android:textColorHint="@color/light_gray"
        android:background="@drawable/searchview"/>
    <TextView
        android:id="@+id/addaddress_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确定添加"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/addaddress_phone"
        android:background="#262a3b"/>
</RelativeLayout>
