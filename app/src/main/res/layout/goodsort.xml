<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/good_head_img"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/buffer_pic" />

    <TextView
        android:id="@+id/good_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/good_head_img"
        android:maxEms="5"
        android:text="商品名字"
        android:textColor="#696969"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/good_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:text="5 分"
        android:textColor="#696969"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/good_price_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_name_text"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/good_head_img"
        android:text="市场价：0 元"
        android:textColor="@color/lightgray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/good_price_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_price_text1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/good_head_img"
        android:text="会员价：0 元"
        android:textColor="#ff0000"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/good_num_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/good_price_text2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/good_head_img">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            >

            <ImageView
                android:id="@+id/good_num_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/minus_new1" />

            <TextView
                android:id="@+id/good_num_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@id/good_num_img1"
                android:text="0"
                android:textColor="#696969"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/good_num_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_toRightOf="@id/good_num_text2"
                android:src="@mipmap/add_new1" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>